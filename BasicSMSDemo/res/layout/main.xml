<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:text="Phone Number" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:text="EditText" android:id="@+id/txtPhoneNo" android:layout_height="wrap_content" android:layout_width="match_parent"></EditText>
    <TextView android:text="Message" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:text="EditText" android:id="@+id/txtMessage" android:layout_height="wrap_content" android:layout_width="match_parent"></EditText>
    <Button android:text="Send" android:id="@+id/btnSendSMS" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
